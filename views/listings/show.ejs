<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-md-8 offset-md-2 mt-4">
        
        <h2 class="fs-1 mb-3 text-danger-emphasis fw-bolder">
            <%= listing.title %>
        </h2>
        
        <div class="card mb-3 listing-show-card">
            <img src="<%= listing.image.url %>" class="card-img-top listing-show-img" alt="<%= listing.title %>" />
            <div class="card-body">
                <div class="px-3">
                    <p class="card-text">
                        <p class="text-muted mb-2">Owned by: <b>@<%= listing.owner.username %></b></p>
                        
                        <p class="mt-3 ps-2"><%= listing.description %></p>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between align-items-center mx-2">
                            <span class="fw-bold fs-5 text-success">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
                            <span class="text-secondary"><i class="bi bi-geo-alt-fill me-1"></i><%= listing.location %>, <%= listing.country %></span>
                        </div>
                        <button class="btn btn-primary btn-lg rounded-pill shadow-sm">
                            <i class="bi bi-calendar-check-fill me-1"></i>Book Now
                        </button>
                    </p>
                </div>
            </div>
        </div>

        <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
        <div class="d-flex justify-content-start gap-2 mb-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit Listing
            </a>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
                <button class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Delete
                </button>
            </form>
        </div>
        <% } %>
        
        <hr class="my-4"/>
        
        <div class="row">
            <div class="col-md-5 mb-5">
                <% if(currUser){ %>
                <h4 class="mb-3">Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
            
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <div class="mb-3">
                        <label for="comment" class="form-label">Comments</label>
                        <textarea name="review[comment]" 
                            id="comment" 
                            rows="4" 
                            class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">
                            Please write some feedback!
                        </div>
                    </div>
                    <button class="btn btn-primary">Submit Review</button>
                </form>
                <% } else { %>
                    <p class="text-muted">You must be logged in to leave a review.</p>
                <% } %>
            </div>

            <div class="col-md-7">
                <h4 class="mb-3">All Reviews (<%= listing.reviews.length %>)</h4>
                <div class="row">
                    <% if(listing.reviews.length > 0) { %>
                        <% for(review of listing.reviews){ %>
                            <div class="card col-12 mb-3 review-card">
                                <div class="card-body">
                                    <h6 class="card-title mb-1"><b>@<%= review.author.username %></b></h6>
                                    <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
                                    <p class="card-text"><%= review.comment %></p>
                                    
                                    <% if(currUser && currUser._id.equals(review.author._id)){ %>
                                    <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mt-2">
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                    <% } %>
                                </div>
                            </div>
                        <% } %>
                    <% } else { %>
                        <p class="text-muted">No reviews yet. Be the first to review!</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>